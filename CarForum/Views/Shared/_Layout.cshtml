<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.ico")">
</head>
<body>
    <header>
        <div class="logo">
            <a asp-action="Index" asp-controller="Home" class="forum-link">На Главную</a>
        </div>
        <nav>
            <a href="#" class="nav-link">Отзывы</a>
            <a href="#" class="nav-link">Контакты</a>
            <a href="#" class="nav-link">Помощь</a>
        </nav>
        <div class="user-panel">
            <a asp-action="Login" asp-controller="Account" class="user-link">Личный кабинет</a>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <ul>
            <li><a href="#">Главная</a></li>
            <li><a href="#">Контакты</a></li>
        </ul>
        <div class="copyright">&copy; 2024 Автомобильный Форум. Все права защищены.</div>
    </footer>
    <script asp-src-include="~/js/**/*.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
