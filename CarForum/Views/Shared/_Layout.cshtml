<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/favicon.ico")">
</head>
<body>
    <header>
        <div class="logo">
            <a asp-action="Index" asp-controller="Home" class="forum-link">На Главную</a>
        </div>
        <nav>
            <a asp-action="CreateReview" asp-controller="Review" class="nav-link">Написать отзыв</a>
            <a asp-action="Search" asp-controller="Review" class="nav-link">Искать отзыв</a>
            <a href="#" class="nav-link">Контакты</a>
            <a href="#" class="nav-link">Помощь</a>
        </nav>
        <div class="user-panel">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="UserProfile" asp-controller="Account" class="user-link">Личный кабинет</a>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account" class="user-link">Войти</a>
            }
        </div>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="copyright">&copy; 2024 Автомобильный Форум. Все права защищены.</div>
    </footer>
    <script asp-src-include="~/js/**/*.js" asp-append-version="true"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
